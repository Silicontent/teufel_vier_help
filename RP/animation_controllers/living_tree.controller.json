{
    "format_version": "1.19.50",
    "animation_controllers": {
        "controller.animation.living_tree": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "animations": [
                        "idle"
                    ],
                    "transitions": [
                        {
                            "walk": "query.ground_speed"
                        }
                    ]
                },
                "walk": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "idle": "!query.ground_speed"
                        }
                    ]
                }
            }
        }
    }
}